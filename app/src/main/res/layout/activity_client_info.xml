<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostblack"
    tools:context=".ClientInfo">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/babygray"
        android:text="CLIENT INFO"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/mustard"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CLIENT NAME: "
            android:textColor="@color/mustard"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/txtName"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Type your name here..."
            android:text=""
            android:textColor="@color/babygray"
            android:textColorHint="@color/babygray"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENT TYPE: "
            android:textColor="@color/mustard"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/txtPaymentType"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:hint="Enter your payment type..."
            android:textColor="@color/babygray"
            android:textColorHint="@color/babygray"
            />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:textColor="@color/almostblack"
        android:text="OK"
        android:paddingHorizontal="10dp"
        android:id="@+id/okclient"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        />

</LinearLayout>